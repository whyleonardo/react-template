{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "formatter": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "noSvgWithoutTitle": "off"
      },
      "correctness": {
        "noUnusedVariables": "error",
        "noUnusedImports": "error"
      }
    },
    "ignore": [
      "**/*.json",
      "dist/**",
      ".cache",
      ".husky/**",
      "public/**",
      "*.config.*",
      "node_modules/**",
      "*.esm.js",
      ".next"
    ]
  }
}
